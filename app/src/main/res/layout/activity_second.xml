<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shivangibose.texttospeechapp.SecondActivity">


    <EditText
        android:id="@+id/inputText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:gravity="start|top"
        android:hint="Enter your message"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/inputText"/>

    <EditText
        android:id="@+id/phnNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/inputText"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:hint="Enter Phone Number"
        android:inputType="phone" />

    <TextView
        android:id="@+id/inputPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Phone Number"
        android:layout_below="@id/phnNo"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/textEncrypted"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputPassword"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/btnDecrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/textEncrypted"
        android:layout_below="@id/inputPassword"/>

    <Button
        android:id="@+id/btnLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/textEncrypted"/>

</RelativeLayout>